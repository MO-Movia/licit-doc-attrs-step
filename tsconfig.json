{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "dist",
    "pretty": false,
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}