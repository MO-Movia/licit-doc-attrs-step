{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "jsx": "react",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "pretty": false,
    "esModuleInterop": true,
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src/**/*.ts"
  ],
}